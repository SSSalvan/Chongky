{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "API/**/*.js", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/API/(.*)", 
      "dest": "/API/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}